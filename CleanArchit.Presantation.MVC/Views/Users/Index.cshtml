@model IEnumerable<CleanArchit.Presantation.MVC.Models.TeacherIdentity>
@{
    ViewBag.Title = "User list";
}
<h1>List of Users</h1>
<a class="btn btn-sm btn-outline-secondary" asp-action="Create">Create User</a>

<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
        <th>Name</th>
        <th>Second Name</th>
        <th>Sirname</th>
        <th>Phone Number</th>
        <th></th>
    </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.SecondName</td>
            <td>@user.Sirname</td>
            <td>@user.PhoneNumber</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
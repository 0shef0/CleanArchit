@model CleanArchit.Presantation.MVC.Models.AdminModels.CreateUserViewModel
@{
    ViewBag.Title = "Create user";
}
<div>
<form asp-action="Create" asp-controller="Users">
    
    <div asp-validation-summary="All" class="text-danger"></div>
        <div class="container">
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" autocomplete="name" aria-required="true" />       
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group  col">
                    <label asp-for="SecondName"></label>
                    <input asp-for="SecondName" class="form-control" autocomplete="secondname" aria-required="true" />      
                    <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>
                </div>
                <div class="row">
                    <div class="form-group  col">
                        <label asp-for="Sirname"></label>
                        <input asp-for="Sirname" class="form-control" autocomplete="sirname" aria-required="true" />
        
                        <span asp-validation-for="Sirname" class="text-danger"></span>
                    </div>
                    <div class="form-group  col">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" type="tel" autocomplete="phonenumber" aria-required="true" />
            
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                    <div class="row">
                        <div class="form-group  col">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
        
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    <div class="form-group  col">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" autocomplete="dateofbirth" aria-required="true" />
        
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                    <div class="row">
                        <div class="form-group  col">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
        
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group  col">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
        
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                <div class="row">
                    <div class="form-group  col">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group  col">
                        <label asp-for="Role"></label>
                        <input asp-for="Role" class="form-control" autocomplete="new-password" aria-required="true" />
        
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
<div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}